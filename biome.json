{
  "$schema": "https://biomejs.dev/schemas/2.3.0/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "files": {
    "includes": ["."],
    "maxSize": 1048576,
    "ignoreUnknown": true,
    "experimentalScannerIgnores": ["dist/**", ".parcel-cache/**"]
  }
}
